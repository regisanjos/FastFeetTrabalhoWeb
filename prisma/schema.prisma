generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  cpf      String   @id @unique
  password String
  
}

model User {
  id       String   @id @default(uuid())
  name     String
  cpf      String   @unique
  password String
  role     String
  parcels  Parcel[]
}

model Parcel {
  id             String  @id @default(uuid())
  cep            Int
  status         String
  rackingCode    String
  typeDelivery   String
  responsible    User?   @relation(fields: [responsibleId], references: [id])
  responsibleId  String?
}

model Recipient {

  id   String @id @default(uuid())
  name String
}
model Deliveryman {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String   @unique
  available Boolean  @default(true)
}
 

 

 

 

 

 





 

 

 

 

 

 

 

 

 


