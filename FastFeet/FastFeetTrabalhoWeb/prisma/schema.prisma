generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuario{
  id    Int @id @default(autoincrement())
  cpf   String  @unique
  password  String
  funcao String
  entregas  Entrega[]
    
}

model entrega {
  id    Int @id @default(autoincrement())
  status String
  destinatarioId Int
  entregadorId Int?
  assinatura String
  criadoEm      DateTime  @default(now())
  atualizadoEm  DateTime  @updatedAt
  Destinatario  Destinatario @relation(fields: [destinatarioId], references: [id])
  Entregador    Usuario?  @relation(fields: [entregadorId], references: [id])

}
model Destinatario {
  id          Int        @id @default(autoincrement())
  nome        String
  endereco    String
  Entregas    Entrega[]
}